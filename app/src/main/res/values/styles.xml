<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="convert_button_style" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/graph_green</item>
        <item name="color">@color/white</item>
    </style>

    <style name="convert_toolbar_styling" parent="Widget.MaterialComponents.Toolbar">
        <item name="elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/white</item>
        <item name="colorOnSurface">@color/graph_green</item>
    </style>


    <style name="convert_edit_text_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@color/offWhite</item>
        <item name="backgroundTint">@color/offWhite</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:editable">true</item>
        <item name="android:inputType">numberDecimal</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>